@model IEnumerable<GradeCalculator.ViewModels.GodinaVM>

@{
    ViewData["Title"] = "Index";
}

<style>
    .data-button {
        float: right;
        margin-left: 10px;
    }
</style>

<h1>Godine</h1>

<div>
    <a asp-action="Create" class="btn btn-primary">Kreiraj godinu/semestar</a>
    @Html.ActionLink("Izvoz podataka", "ExportData", new { id = Model.First().KorisnikId }, new { @class = "btn btn-outline-primary data-button" })
    @Html.ActionLink("Uvoz podataka", "ImportData", new {}, new { @class = "btn btn-outline-primary data-button" })
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prosjek)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prosjek)
            </td>
            <td>
                <div class="btn-group">
                    @Html.ActionLink("Predmeti", "Subjects", new { _id = item.Idgodina }, new { @class = "btn btn-outline-primary" })
                    @Html.ActionLink("Brisanje", "Delete", new { id = item.Idgodina }, new { @class = "btn btn-outline-danger" })
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
