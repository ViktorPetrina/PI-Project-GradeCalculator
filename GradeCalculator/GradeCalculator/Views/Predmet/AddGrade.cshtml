@model GradeCalculator.ViewModels.OcjenaVM

@{
    ViewData["Title"] = "AddGrade";
}

<h1>Dodavanje ocjene</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGrade">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vrijednost" class="control-label"></label>
                <input asp-for="Vrijednost" class="form-control" />
                <span asp-validation-for="Vrijednost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Predmet</label>
                <select asp-for="PredmetId" asp-items="ViewBag.PredmetListItems" class="form-select"></select>
                <span asp-validation-for="PredmetId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
