
@model GradeCalculator.ViewModels.PredmetVM

@{
    ViewData["Title"] = "Create";
}

<h1>Kreiranje predmeta</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GodinaId" class="control-label"></label>
                <select asp-for="GodinaId" asp-items="ViewBag.GodineListItems" class="form-select"></select>
                <span asp-validation-for="GodinaId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-primary" /> 
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
