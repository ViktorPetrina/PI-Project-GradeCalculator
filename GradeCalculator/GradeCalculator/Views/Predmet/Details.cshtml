@model GradeCalculator.ViewModels.PredmetVM

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewBag.SubjectName</h1>

<div>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prosjek)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prosjek)
        </dd>

        <form asp-action="SaveGrades" method="post">
            <table>
                <thead> 
                    <tr> 
                        <th>Subject</th> 
                        <th>Grade</th> 
                    </tr> 
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Ocjenas.Count; i++)
                    {
                        <tr> 
                            <td>@Model.Ocjenas.ElementAt(i).Vrijednost</td> 
                            <td> 
                                <input type="text" name="Grades[@i].Grade" value="@Model.Ocjenas.ElementAt(i).Vrijednost" /> 
                                <input type="hidden" name="Grades[@i].Subject" value="@ViewBag.SubjectName" /> 
                            </td> 
                        </tr>
                    }
                </tbody>
            </table> <button type="submit">Save Grades</button>
        </form>


    </dl>
</div>
<div>
    @Html.ActionLink("Nazad", "SubjectsByYear", new { id = Model.GodinaId }, new { @class = "btn btn-outline-primary" })

</div>
